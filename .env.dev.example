# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=cyberquiz
DB_USER=cyberquiz
DB_PASSWORD=changeme

# JWT Secret (change this to a random string in production)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Admin User (auto-created on startup)
ADMIN_EMAIL=admin@cyberquiz.fr
ADMIN_PASSWORD=change-this-secure-password

# PgAdmin (avoid .local domains to prevent issues)
PGADMIN_DEFAULT_EMAIL=admin@cyberquiz.fr
PGADMIN_DEFAULT_PASSWORD=change-this-secure-password

# Node Environment
NODE_ENV=development

# Additional variables consumed by docker-compose and services
# Postgres image variables
POSTGRES_DB=cyberquiz
POSTGRES_USER=cyberquiz
POSTGRES_PASSWORD=changeme

# App convenience: a full DATABASE_URL (optional, services can also use POSTGRES_*)
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${DB_HOST}:${DB_PORT}/${POSTGRES_DB}

# AI / embeddings
OLLAMA_BASE_URL=http://ollama:11434
QDRANT_URL=http://qdrant:6333

# Allow external AI providers (true/false)
ALLOW_EXTERNAL_AI=false

